<mvc:View
		controllerName="opensap.myapp.controller.Products"
		xmlns="sap.m"
		xmlns:t="sap.ui.table"
		xmlns:mvc="sap.ui.core.mvc">
			<t:Table
				title="Product"
				rows="{
					path: '/Products',
					parameters : {
						expand: 'Category, Supplier'
					}
				}"
				selectionMode="MultiToggle">
				<t:columns>
					<t:Column>
						<Label text="Product id"/>
						<t:template>
							<Text text="{path: 'ID'}"/>
								</t:template>
						</t:Column>
					<t:Column>
						<Label text="Product name"/>
						<t:template>
							<Text text="{path: 'Name'}"/>
						</t:template>
					</t:Column>
					<t:Column>
						<Label text="Category"/>
						<t:template>
							<Text text="{path: 'Category/Name'}"/>
						</t:template>
					</t:Column>
					<t:Column>
						<Label text="Supllier"/>
						<t:template>
							<Button text="Show supllier"/>
						</t:template>
					</t:Column>
					<t:Column>
						<Label text="Description"/>
						<t:template>
							<Button text="Show description" press="onShowDescription"/>
						</t:template>
					</t:Column>
					<t:Column>
						<Label text="Price"/>
						<t:template>
							<Text text="{path: 'Price'}"/>
						</t:template>
					</t:Column>
					<t:Column>
						<Label text="Release date"/>
						<t:template>
							<Text text="{path: 'ReleaseDate', type: 'sap.ui.model.type.DateTime'}"/>
						</t:template>
					</t:Column>
					<t:Column>
						<Label text="DiscontinuedDate"/>
						<t:template>
							<Text text="{path: 'DiscontinuedDate', type: 'sap.ui.model.type.DateTime'}"/>
						</t:template>
					</t:Column>
				</t:columns>
			</t:Table>
</mvc:View>